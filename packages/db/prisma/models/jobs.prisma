enum JobType {
  FullTime
  Internship
}

enum ExperienceLevel {
  ENTRY_LEVEL
  MID_LEVEL
  SENIOR_LEVEL
}

model JobCategory {
  id          String  @id @default(cuid())
  name        String  @unique
  slug        String  @unique
  description String?

  jobs Jobs[] @relation("JobCategoryJobs")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Jobs {
  id String @id @default(cuid())

  title            String
  shortDescription String
  description      String
  slug             String          @unique
  published        Boolean         @default(false)
  experienceLevel  ExperienceLevel
  salaryRange      String
  type             JobType
  link             String
  image            String?
  jobCategories    JobCategory[]   @relation("JobCategoryJobs")
  bookmarks        Bookmark[]      @relation("JobBookmarks")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
